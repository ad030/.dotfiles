# font pango:zpix 16

# set wallpaper

set $wallpaper ~/Pictures/wallpapers/outer-wilds/wallpaper1.png
exec_always feh --bg-fill $wallpaper

# enable transparency with picom compositor
exec_always picom -f

# lock screen after 5 minutes
exec "xautolock -detectsleep -time 5 -locker \"i3lock-fancy\""

# lock screen keybind
bindsym $sup+Shift+p exec i3lock-fancy

